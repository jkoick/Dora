---
import Base from '@/layouts/Base.astro';
import JsonLd from '@/components/JsonLd.astro';
import CallToAction from '@/partials/CallToAction.astro';
import ContactSection from '@/partials/ContactSection.astro';
import OfficeLocation from '@/partials/OfficeLocation.astro';
import type { CollectionEntry } from 'astro:content';
import { getEntry } from 'astro:content';

const contact = (await getEntry(
  'contact',
  '-index'
)) as CollectionEntry<'contact'>;
---

<Base {...contact.data}>
  <JsonLd
    schema="ContactPage"
    pageTitle={contact.data.meta_title}
    pageDescription={contact.data.description}
    slot="head"
  />
  <ContactSection />

  <!-- <hr class="divider" /> -->

  <!-- <OfficeLocation /> -->

  <hr class="divider" />

  <CallToAction />
</Base>
