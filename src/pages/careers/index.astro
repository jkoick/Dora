---
import Base from '@/layouts/Base.astro';
import AboutUsWithStats from '@/partials/AboutUsWithStats.astro';
import CallToAction from '@/partials/CallToAction.astro';
import CareerBanner from '@/partials/CareerBanner.astro';
import GalleryCreative from '@/partials/GalleryCreative.astro';
import OpenedPositions from '@/partials/OpenedPositions.astro';
import type { CollectionEntry } from 'astro:content';
import { getEntry } from 'astro:content';

const career = (await getEntry(
  'careers',
  '-index'
)) as CollectionEntry<'careers'>;

const gallery = career.data.gallery;
---

<Base {...career.data}>
  <CareerBanner />

  <hr class="divider" />

  <AboutUsWithStats />

  <hr class="divider" />

  <GalleryCreative {gallery} />

  <hr class="divider" />

  <OpenedPositions />

  <hr class="divider" />

  <CallToAction />
</Base>
